<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_hmargin"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginEnd="@dimen/card_hmargin"
        android:focusable="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_8"
            android:paddingBottom="@dimen/padding_8">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/txv_casa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"/>

                <FrameLayout
                    android:layout_width="@dimen/badge_size"
                    android:layout_height="@dimen/badge_size"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/lb_vs"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/txv_fora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/txv_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textColorTertiary"
                android:textSize="@dimen/text_14" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_odd">

                <LinearLayout
                    android:id="@+id/layout_odd_casa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingBottom="@dimen/padding_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/lb_casa"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_11" />

                    <TextView
                        android:id="@+id/txv_odd_casa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_14" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_odd_empate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingBottom="@dimen/padding_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/lb_empate"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_11" />

                    <TextView
                        android:id="@+id/txv_odd_empate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_14" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_odd_fora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingBottom="@dimen/padding_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/lb_fora"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_11" />

                    <TextView
                        android:id="@+id/txv_odd_fora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_14" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/textColorSecondary" />

                <FrameLayout
                    android:id="@+id/layout_mais_odds"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/padding_8"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingEnd="@dimen/padding_8"
                    android:paddingBottom="@dimen/padding_4">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mais_odds_dark"
                        android:contentDescription="@string/img_odd_mais"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>