<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_21"
        android:paddingTop="@dimen/padding_40"
        android:paddingEnd="@dimen/padding_21"
        android:paddingBottom="@dimen/padding_21">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/bg_icon_login_size_large"
                android:layout_height="@dimen/bg_icon_login_size_large"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/padding_16"
                android:background="@drawable/bg_login_icon_user"
                android:src="@drawable/ic_user_dark"/>

            <TextView
                android:id="@+id/txv_nome_cambista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/text_21"/>

            <TextView
                android:id="@+id/txv_nome_gerente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textColorTertiary"
                android:textSize="@dimen/text_16"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_40"
                android:background="#DBDBDB"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_40"
                android:paddingTop="@dimen/padding_8"
                android:layout_marginEnd="@dimen/margin_40"
                android:paddingBottom="@dimen/padding_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:textColor="@color/textColorTertiary"
                    android:textSize="@dimen/text_16"
                    android:text="@string/lb_email"/>

                <TextView
                    android:id="@+id/txv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_16"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_marginEnd="@dimen/margin_40"
                android:background="#DBDBDB"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_40"
                android:paddingTop="@dimen/padding_8"
                android:layout_marginEnd="@dimen/margin_40"
                android:paddingBottom="@dimen/padding_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:textColor="@color/textColorTertiary"
                    android:textSize="@dimen/text_16"
                    android:text="@string/lb_contato"/>

                <TextView
                    android:id="@+id/txv_telefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_16"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_marginEnd="@dimen/margin_40"
                android:background="#DBDBDB"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_40"
                android:paddingTop="@dimen/padding_8"
                android:layout_marginEnd="@dimen/margin_40"
                android:paddingBottom="@dimen/padding_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:textColor="@color/textColorTertiary"
                    android:textSize="@dimen/text_16"
                    android:text="@string/lb_limite"/>

                <TextView
                    android:id="@+id/txv_limite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_16"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginEnd="@dimen/margin_32"
                android:background="#DBDBDB"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginEnd="@dimen/margin_32"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="0dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_cupons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/padding_32"
                        android:paddingBottom="@dimen/padding_32">

                        <ImageView
                            android:layout_width="@dimen/img_info_size"
                            android:layout_height="@dimen/img_info_size"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_round_red"
                            android:padding="@dimen/padding_8"
                            android:src="@drawable/ic_cupons" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_8"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/lb_cupons"
                            android:textSize="@dimen/text_16"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_caixa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/padding_32"
                        android:paddingBottom="@dimen/padding_32">

                        <ImageView
                            android:layout_width="@dimen/img_info_size"
                            android:layout_height="@dimen/img_info_size"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_round_red"
                            android:padding="@dimen/padding_8"
                            android:src="@drawable/ic_financeiro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_8"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/lb_caixa"
                            android:textSize="@dimen/text_16"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginEnd="@dimen/margin_40"
            android:paddingStart="@dimen/padding_16"
            android:paddingTop="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16"
            android:paddingBottom="@dimen/padding_16"
            android:background="@drawable/bg_xp_card"
            android:focusable="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_18"
                    android:text="@string/lb_pontos"/>

                <TextView
                    android:id="@+id/txv_xp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_18"
                    android:textStyle="bold" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/view_xp_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DBDBDB">

                <FrameLayout
                    android:id="@+id/view_xp"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_xp_bar"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/content_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

</FrameLayout>